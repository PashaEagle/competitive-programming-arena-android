<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgColor"
    >

    <TextView
        android:id="@+id/tUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="26dp"
        android:text="Username:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tFullname"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tUsernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tAgeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tFullnameValue"
        app:layout_constraintTop_toBottomOf="@+id/tFullnameValue" />

    <TextView
        android:id="@+id/tGroupValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tAgeValue"
        app:layout_constraintTop_toBottomOf="@+id/tAgeValue" />

    <TextView
        android:id="@+id/tFullnameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tUsernameValue"
        app:layout_constraintTop_toBottomOf="@+id/tUsernameValue" />

    <TextView
        android:id="@+id/tFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="25dp"
        android:text="Full name:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tAge"
        app:layout_constraintStart_toStartOf="@+id/tUsername" />

    <TextView
        android:id="@+id/tAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="12dp"
        android:text="Age:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tGroup"
        app:layout_constraintStart_toStartOf="@+id/tGroup" />

    <TextView
        android:id="@+id/tGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="Group:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tLinkedAccounts"
        app:layout_constraintEnd_toEndOf="@+id/tFullname"
        app:layout_constraintStart_toStartOf="@+id/tFullname" />

    <TextView
        android:id="@+id/tCodeforcesUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="41dp"
        android:text="Codeforces:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tLinkedAccounts" />

    <TextView
        android:id="@+id/tCodewarsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Codewars:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tCodeforcesUsername"
        app:layout_constraintTop_toBottomOf="@+id/tCodeforcesUsername" />

    <TextView
        android:id="@+id/tCodeforcesUsernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="41dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tLinkedAccounts"
        app:layout_constraintTop_toBottomOf="@+id/tLinkedAccounts" />

    <TextView
        android:id="@+id/tCodewarsUsernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="88dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tLinkedAccounts"
        app:layout_constraintTop_toBottomOf="@+id/tLinkedAccounts" />

    <TextView
        android:id="@+id/tLinkedAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="55dp"
        android:text="Linked accounts:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tGroupValue" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="63dp"
        android:text="Account page"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>