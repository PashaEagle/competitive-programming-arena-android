<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/tUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="49dp"
        android:text="Username:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tUsernameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tAgeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tFullnameValue"
        app:layout_constraintTop_toBottomOf="@+id/tFullnameValue" />

    <TextView
        android:id="@+id/tGroupValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tAgeValue"
        app:layout_constraintTop_toBottomOf="@+id/tAgeValue" />

    <TextView
        android:id="@+id/tFullnameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="null"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tUsernameValue"
        app:layout_constraintTop_toBottomOf="@+id/tUsernameValue" />

    <TextView
        android:id="@+id/tFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="26dp"
        android:text="Full name:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tUsername"
        app:layout_constraintTop_toBottomOf="@+id/tUsername" />

    <TextView
        android:id="@+id/tAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="Age:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tGroup"
        app:layout_constraintEnd_toEndOf="@+id/tGroup" />

    <TextView
        android:id="@+id/tGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group:"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tFullname"
        app:layout_constraintStart_toStartOf="@+id/tFullname"
        app:layout_constraintTop_toTopOf="@+id/tGroupValue" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="63dp"
        android:text="Account page"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>